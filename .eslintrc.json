{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": "off",
        "quotes": ["error", "double"],
        "no-trailing-spaces": "off",
        "padded-blocks": "off",
        "eqeqeq": "off",
        "prefer-const": "off",
        "no-tabs": "off"
    }
}

